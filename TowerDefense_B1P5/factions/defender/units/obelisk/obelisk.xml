	<!-- *** skills *** -->
	<skills>

		<skill>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="10"/>
			<animation path="models/obelisk_construction.g3d"/>
			<sound enabled="false"/>
			<type value="be_built"/>
