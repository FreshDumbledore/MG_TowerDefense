<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="5"/>
		<max-hp value="4000" regeneration="10"/>
		<max-ep value="0"/>
		<armor value="20"/>	
		<armor-type value="unit"/>			
		<sight value="16"/>
		<time value="140"/>	
		<multi-selection value="false"/>
		<cellmap value="false"/>
		<levels>
			<level name="expert" kills="20"/>
		</levels>
		<fields>
			<field value="land"/>
		</fields>	
		<properties/>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="level_2_towers"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="350"/>	
			<resource name="stone" amount="200"/>			
		</resource-requirements>
		<resources-stored/>
		<image path="images/earth_serpent.bmp"/>
		<image-cancel path="../ultimate_tower/images/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="false">
		</selection-sounds>
		<command-sounds enabled="false">
		</command-sounds>
	</parameters>

	<skills>
		<skill>
			<type value="be_built"/>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="40"/>
			<animation path="models/serpent_standing.g3d"/>
			<sound enabled="false"/>
		</skill>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="50"/>
			<animation path="models/serpent_standing.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="75"/>
			<anim-speed value="60"/>
			<animation path="models/serpent_attacking.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/attack1.wav"/>
			</sound>
			<attack-strenght value="150"/>
			<attack-var value="50"/>
			<attack-range value="11"/>
			<attack-type value="defender"/>
			<attack-start-time value="0.6"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/hit1.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="1"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="1"/>
			<speed value="1"/>
			<anim-speed value="10"/>
			<animation path="models/serpent_standing.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/serpent_dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall5.wav"/>
			</sound>			
			<fade value="true"/>
		</skill>
	</skills>
	
	<commands>
		<command>
			<type value="stop"/>
			<name value="stop"/>
			<image path="../ultimate_tower/images/attack_off.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>
		
		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../ultimate_tower/images/attack_on.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
	</commands>
</unit>