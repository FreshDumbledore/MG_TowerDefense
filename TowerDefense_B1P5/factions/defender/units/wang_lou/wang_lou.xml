<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="6"/>
		<max-hp value="3000" regeneration="0"/>
		<max-ep value="0"/>
		<armor value="0"/>	
		<armor-type value="building"/>			
		<sight value="16"/>
		<time value="80"/>	
		<multi-selection value="false"/>
		<cellmap value="false"/>
		<levels/>	
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false"/>
		<rotationAllowed value="false" />
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="200"/>
			<resource name="wood" amount="100"/>			
		</resource-requirements>
		<resources-stored/>
		<image path="images/defense_tower.bmp"/>
		<image-cancel path="../../icons/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="../lou_lu/sounds/gong.ogg"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="../lou_lu/sounds/gong.ogg"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="20"/>
			<animation path="models/far_looking_building.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="stop"/>
			<name value="show_range_skill"/>		
			<ep-cost value="0"/>
			<speed value="200"/>
			<anim-speed value="200"/>
			<animation path="models/far_looking_building.g3d"/>
			<particles value="true">
				<particle-file path="particle_range.xml">
					<shape value="conical">
						<angle value="90"/>
					</shape>
					<radius value="12"/>
					<min-radius value="11.9"/>
					<direction x="0" y="0.1" z="0"/>
					<offset x="0" y="0" z="0"/>
				</particle-file>
			</particles>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="be_built"/>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="20"/>
			<animation path="models/far_looking_building_build.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>												
			<type value="morph"/>											
			<name value="convert"/>											
			<ep-cost value="0"/>											
			<speed value="500"/>											
			<anim-speed value="7"/>											
			<animation path="models/far_looking_building_build.g3d"/>											
			<sound enabled="false"/> 											
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="80"/>
			<anim-speed value="90"/>
			<animation path="models/far_looking_building.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/defense_tower_attack1.wav"/>
				<sound-file path="sounds/defense_tower_attack2.wav"/>
			</sound>
			<attack-strenght value="120"/>
			<attack-var value="50"/>
			<attack-range value="12"/>
			<attack-type value="defender"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
				<field value="air"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/arrow_hit1.wav"/>
					<sound-file path="sounds/arrow_hit2.wav"/>
					<sound-file path="sounds/arrow_hit3.wav"/>
					<sound-file path="sounds/arrow_hit4.wav"/>
					<sound-file path="sounds/arrow_hit5.wav"/>
				</sound>
			</projectile>
			<splash value="false"/>
		</skill>

		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="60"/>
			<anim-speed value="60"/>
			<animation path="models/far_looking_building_die.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="glow_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="../lou_lu/sounds/tech_building_fall5.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>
	
	<commands>

		<command>
			<type value="stop"/>
			<name value="attack_off"/>
			<image path="../../icons/attack_off.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="attack_on"/>
			<image path="../../icons/attack_on.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<attack-skill value="attack_skill"/>
                        <stop-skill value="stop_skill"/>
		</command>
		
<command>
			<type value="stop"/>
			<name value="show_ranges"/>
			<image path="images/ranges.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="show_range_skill"/>
		</command>

	</commands>
</unit>
