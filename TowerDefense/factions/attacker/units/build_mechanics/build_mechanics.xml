<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="4" />
		<height value="4" />
		<max-hp value="6000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="0" />
		<armor-type value="building"/>		
		<sight value="5" />
		<time value="150" />
		<multi-selection value="false" />
		<cellmap value="true">
			<row value="1011"/>
			<row value="0000"/>
			<row value="1011"/>
			<row value="1011"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false" />
		<rotationAllowed value="false" />
		<unit-requirements>
			<unit name="castle" />
		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="mechanic_units"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="200" />
			<resource name="wood" amount="200" />
		</resource-requirements>
		<resources-stored>
			<resource name="wood" amount="200" />
		</resources-stored>
		<image path="images/technodrome.bmp"/>
		<image-cancel path="../../icons/cancel.bmp"/>
		<meeting-point value="true" image-path="../../icons/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</command-sounds>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/technodrome_construction.g3d"/>
			<sound enabled="false"/>
			<type value="be_built"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/technodrome.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/technodrome.g3d"/>
			<sound enabled="false"/>
		</skill>	
		
		<skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/technodrome.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="300" />
			<animation path="../build_flying/models/technodrome_destruction.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
				<particle-file path="glow_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall5.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>
		<command>
			<type value="produce"/>
			<name value="produce_crossbow"/>
			<image path="../crossbow/images/crossbow.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="crossbow"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="produce_battle_machine"/>
			<image path="../battle_machine/images/battle_machine.bmp"/>
