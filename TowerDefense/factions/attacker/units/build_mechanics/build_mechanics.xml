			<image path="../catapult/images/catapult.bmp"/>
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="catapult"/>
		</command>

		<command>
			<type value="produce"/>
