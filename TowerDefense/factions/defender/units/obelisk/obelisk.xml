<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="3"/>
		<height value="5" />
		<max-hp value="9000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="30" />
		<armor-type value="building"/>		
		<sight value="14" />
		<time value="1"/>
		<multi-selection value="true" />
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			
		</properties>
		<light enabled="false" />
		<unit-requirements />
		<upgrade-requirements>
			<upgrade name="level_4_towers"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="800" />
			<resource name="stone" amount="400" />
		</resource-requirements>
		<resources-stored>
		</resources-stored>
		<image path="images/obelisk.bmp"/>
		<image-cancel path="../../icons/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="$COMMONDATAPATH/sounds/tech_click.wav" />
		</command-sounds>
		<damage-particles value="true">
			<particle-file path="warning.xml"/>
		</damage-particles>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<name value="be_built_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="10"/>
			<animation path="models/obelisk_construction.g3d"/>
			<sound enabled="false"/>
			<type value="be_built"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="100"/>
			<animation path="models/obelisk.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="produce"/>
			<name value="produce_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="50"/>
			<animation path="models/obelisk_producing.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="100"/>
			<speed value="10"/>
			<anim-speed value="20"/>
			<animation path="models/obelisk.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="upgrade"/>
			<name value="upgrade_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="60"/>
			<animation path="models/obelisk_producing.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="150"/>
			<anim-speed value="150"/>
			<animation path="models/obelisk.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/defense_tower_attack1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/defense_tower_attack2.wav"/>
			</sound>
			<attack-strenght value="220"/>
			<attack-var value="25"/>
			<attack-range value="12"/>
			<attack-type value="defender"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="$COMMONDATAPATH/sounds/arrow_hit1.wav"/>
					<sound-file path="$COMMONDATAPATH/sounds/arrow_hit2.wav"/>
					<sound-file path="$COMMONDATAPATH/sounds/arrow_hit3.wav"/>
					<sound-file path="$COMMONDATAPATH/sounds/arrow_hit4.wav"/>
					<sound-file path="$COMMONDATAPATH/sounds/arrow_hit5.wav"/>
				</sound>
			</projectile>
			<splash value="true">
				<radius value="2"/>
				<damage-all value="false"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="300"/>
			<anim-speed value="20" />
			<animation path="models/obelisk_dying.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/tech_building_fall5.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>
		
		<skill>
			<type value="stop" />
			<name value="stop_destruct"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/obelisk_dying.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0" />
				<target value="faction" include-self="true">
					<unit-type name="obelisk" />
				</target>
				<max-hp value="0" regeneration="-10000" />
				<particles value="false"/>
			</attack-boost>
		</skill>

		<skill>
			<type value="produce" />
			<name value="produce_repair"/>		
			<ep-cost value="0" />
			<speed value="900" />
			<anim-speed value="300" />
			<animation path="models/obelisk.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0" />
				<target value="faction" include-self="true">
					<unit-type name="obelisk" />
				</target>
				<max-hp value="0" regeneration="500" />
				<particles value="false"/>
			</attack-boost>
		</skill>

	</skills>

	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="stop"/>
			<name value="attack_off"/>
			<image path="../../icons/attack_off.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="attack_on"/>
			<image path="../../icons/attack_on.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<attack-skill value="attack_skill"/>
                        <stop-skill value="stop_skill"/>
		</command>
		
		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../icons/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>				
			<type value="attack_stopped"/>			
			<name value="self_destruction"/>			
			<image path="../../icons/destruct.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
                        <stop-skill value="stop_destruct"/>	
			<attack-skill value="attack_skill"/>							
		</command>

		<command>
			<type value="produce"/>
			<name value="repair_500_hp" />
			<image path="../../icons/repair.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_repair"/>
			<produced-unit name="repair"/>
		</command>

	</commands>
</unit>
