<?xml version="1.0" standalone="no"?>

<unit>
	<parameters>
		<size value="2"/>
		<height value="4"/>
		<max-hp value="900" regeneration="0"/>
		<max-ep value="0"/>
		<armor value="0"/>	
		<armor-type value="building"/>			
		<sight value="16"/>
		<time value="20"/>	
		<multi-selection value="true"/>
		<cellmap value="false"/>
		<levels/>	
		<fields>
			<field value="land"/>
		</fields>	
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements/>
		
		<resource-requirements>
			<resource name="gold" amount="100"/>
			<resource name="wood" amount="50"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/defense_tower.bmp"/>
		<image-cancel path="../../icons/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/mars_click.wav"/>
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/mars_click.wav"/>
		</command-sounds>
	</parameters>

	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="1000"/>
			<anim-speed value="100"/>
			<animation path="models/turret_light.g3d"/>
			<sound enabled="false"/>
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="10000"/>
			<speed value="10"/>
			<anim-speed value="20"/>
			<animation path="models/turret_light.g3d"/>
			<sound enabled="false"/>
		</skill>
		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="90"/>
			<anim-speed value="120"/>
			<animation path="models/turret_light.g3d"/>
			<sound enabled="false"/>
			<attack-strenght value="40"/>
			<attack-var value="40"/>
			<attack-range value="15"/>
			<attack-type value="defender"/>
			<attack-start-time value="0.6"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">				
				<particle value="true" path="particle_proj.xml"/>				
				<sound enabled="true">
					<sound-file path="/sounds/laser3.wav"/>
				</sound>
			</projectile>
			<splash value="true">				
				<radius value="1"/>			
				<damage-all value="false"/>			
				<particle value="true" path="particle_splash.xml"/>			
			</splash>
		</skill>
		<skill>
			<type value="die"/>
			<name value="die_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/turret_base_build.g3d"/>
			<particles value="true">
				<particle-file path="die_smoke_particles.xml"/>
				<particle-file path="die_glow_particles.xml"/>
			</particles>
			<sound enabled="false"/>
					
			<fade value="false"/>
		</skill>
		<skill>												
			<type value="morph"/>											
			<name value="morph"/>											
			<ep-cost value="0"/>											
			<speed value="500"/>											
			<anim-speed value="200"/>											
			<animation path="models/turret_base_built.g3d"/>											
			<sound enabled="false"/> 											
		</skill>
		<skill>
			<type value="be_built" />
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="120"/>
			<speed value="120"/>
			<anim-speed value="300" />
			<animation path="models/turret_base_build.g3d" />
			<sound enabled="false" />
		</skill>
		<skill>
			<type value="stop" />
			<name value="stop_destruct"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/turret.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0" />
				<target value="faction" include-self="true">
					<unit-type name="laser_turret" />
				</target>
				<max-hp value="0" regeneration="-10000" />
				<particles value="false"/>
			</attack-boost>
		</skill>
	</skills>
	
			
	<commands>		
						
		<command>				
			<type value="stop"/>			
			<name value="attack_off"/>			
			<image path="../../icons/attack_off.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
			<stop-skill value="stop_skill"/>			
		</command>				
						
		<command>				
			<type value="attack_stopped"/>			
			<name value="attack_on"/>			
			<image path="../../icons/attack_on.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
			<attack-skill value="attack_skill"/>			
                        <stop-skill value="stop_skill"/>						
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../icons/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
			

		<command>				
			<type value="attack_stopped"/>			
			<name value="self_destruction"/>			
			<image path="../../icons/destruct.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
                        <stop-skill value="stop_destruct"/>	
			<attack-skill value="attack_skill"/>							
		</command>

		<command>												
			<type value="morph"/>											
			<name value="upgrade_to_level_2_damage"/>											
			<image path="../death_ray_turret/images/defense_tower.bmp"/>											
			<unit-requirements/>											
			<upgrade-requirements/>						
			<morph-skill value="morph"/>											
			<morph-unit name= "death_ray_turret"/>											
			<discount value="0"/>											
		</command>
		<command>												
			<type value="morph"/>											
			<name value="back_to_tower_selection"/>											
			<image path="../level_1_towers/images/level_1_towers.bmp"/>											
			<unit-requirements/>											
			<upgrade-requirements/>					
			<morph-skill value="morph"/>											
			<morph-unit name= "level_1_towers"/>											
			<discount value="0"/>											
		</command>
						
						
	</commands>	
	
</unit>
