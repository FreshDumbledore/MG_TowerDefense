<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="3"/>
		<height value="2" />
		<max-hp value="6000" regeneration="0"/>
		<max-ep value="0" />
		<armor value="30" />
		<armor-type value="building"/>
		<sight value="15" />
		<time value="1"/>
		<multi-selection value="true" />
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false" />
		<rotationAllowed value="false" />
		<unit-requirements>
		</unit-requirements>
		<upgrade-requirements>
			<upgrade name="level_4_towers"/>
		</upgrade-requirements>
		<resource-requirements>
			<resource name="gold" amount="800" />
			<resource name="stone" amount="200" />
			<resource name="wood" amount="200" />
		</resource-requirements>
		<resources-stored />
		<image path="images/archmage_tower.bmp"/>
		<image-cancel path="../../icons/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/magic_click.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/magic_click.wav" />
		</command-sounds>
	</parameters>

	<!-- *** skills *** -->
	<skills>

		<skill>
			<type value="be_built"/>
			<name value="be_built_skill"/>
			<ep-cost value="0" />
			<speed value="500" />
			<anim-speed value="300" />
			<animation path="models/archmage_tower_construction.g3d" />
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/archmage_tower.g3d" />
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="move"/>
			<name value="move_skill"/>
			<ep-cost value="100"/>
			<speed value="10"/>
			<anim-speed value="20"/>
			<animation path="models/archmage_tower.g3d"/>
			<sound enabled="false"/>
		</skill>
		
		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="160"/>
			<anim-speed value="160"/>
			<animation path="models/archmage_tower_att.g3d"/>
			<sound enabled="true" start-time="0">
				<sound-file path="$COMMONDATAPATH/sounds/defense_tower_attack1.wav"/>
				<sound-file path="$COMMONDATAPATH/sounds/defense_tower_attack2.wav"/>
			</sound>
			<attack-strenght value="200"/>
			<attack-var value="25"/>
			<attack-range value="15"/>
			<attack-type value="defender"/>
			<attack-start-time value="0.3"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="false"/>
			<particles value="true" start-time="0.0" end-time="1.0">
				<particle-file path="particle_proj1.xml"/>
				<particle-file path="particle_proj2.xml"/>
				<particle-file path="particle_fall1.xml"/>
				<particle-file path="particle_fall2.xml"/>
			</particles>
			<splash value="true">
				<radius value="0"/>
				<damage-all value="true"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>
		
		<skill>
			<type value="die"/>
			<name value="die_skill"/>	
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="300"/>
			<animation path="models/archmage_tower_destruction.g3d"/>
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/magic_building_fall6.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

		<skill>												
			<type value="morph"/>											
			<name value="morph"/>											
			<ep-cost value="0"/>											
			<speed value="500"/>											
			<anim-speed value="200"/>											
			<animation path="models/archmage_tower.g3d"/>											
			<sound enabled="false"/> 											
		</skill>
		
		<skill>
			<type value="stop" />
			<name value="stop_destruct"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/archmage_tower_destruction.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0" />
				<target value="faction" include-self="true">
					<unit-type name="ultimate_tower" />
				</target>
				<max-hp value="0" regeneration="-10000" />
				<particles value="false"/>
			</attack-boost>
		</skill>

	</skills>
	<!-- *** commands *** -->
	<commands>

		<command>
			<type value="stop"/>
			<name value="attack_off"/>
			<image path="../../icons/attack_off.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<stop-skill value="stop_skill"/>
		</command>

		<command>
			<type value="attack_stopped"/>
			<name value="attack_on"/>
			<image path="../../icons/attack_on.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<attack-skill value="attack_skill"/>
                        <stop-skill value="stop_skill"/>
		</command>
		
		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../icons/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>				
			<type value="attack_stopped"/>			
			<name value="self_destruction"/>			
			<image path="../../icons/destruct.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
                        <stop-skill value="stop_destruct"/>	
			<attack-skill value="attack_skill"/>							
		</command>

		<command>												
			<type value="morph"/>											
			<name value="back_to_tower_selection"/>											
			<image path="../level_4_towers/images/level_4_towers.bmp"/>											
			<unit-requirements/>											
			<upgrade-requirements/>					
			<morph-skill value="morph"/>											
			<morph-unit name= "level_4_towers"/>											
			<discount value="0"/>											
		</command>

	</commands>
</unit>
