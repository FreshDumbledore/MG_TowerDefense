<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="3"/>
		<height value="2" />
		<max-hp value="4000" regeneration="0"/>
		<max-ep value="0" />		 
		<armor value="10" />
		<armor-type value="building"/>				
		<sight value="16" />
		<time value="200" />
		<multi-selection value="true" />
		<cellmap value="false"/>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
			<property value="burnable"/>
		</properties>
		<light enabled="false"/>
		<unit-requirements />
		<upgrade-requirements>
			<upgrade name="level_3_towers"/>
		</upgrade-requirements>

		<resource-requirements>
			<resource name="gold" amount="200" />
			<resource name="wood" amount="150" />
			<resource name="stone" amount="150"/>
		</resource-requirements>
		<resources-stored/>
		<image path="images/head.bmp"/>
		<image-cancel path="../../icons/cancel.bmp"/>
		<meeting-point value="false"/>
		<selection-sounds enabled="true">
			<sound path="sounds/sel.wav" />
		</selection-sounds>
		<command-sounds enabled="false"/>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>
	
	  		<skill>
			<type value="stop" />
			<name value="stop_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="50" />
			<animation path="models/asparenium_still.g3d" />
			<sound enabled="false" />
		</skill>

		<skill>
			<type value="move"/>
			<name value="move_skill"/>		
			<ep-cost value="10000"/>
			<speed value="10"/>
			<anim-speed value="20"/>
			<animation path="models/asparenium_still.g3d"/>
			
			<sound enabled="false"/>
		</skill>

		
		<skill>
			<type value="be_built" />
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="30" />
			<animation path="models/asparenium.g3d" />
			<sound enabled="false" />
		</skill>	
		
		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="0"/>
			<speed value="350"/>
			<anim-speed value="350"/>
			<animation path="models/asparenium_attack.g3d"/>
			<sound enabled="true" start-time="0.0">
				<sound-file path="sounds/shoot1.wav"/>
				<sound-file path="sounds/shoot2.wav"/>
				<sound-file path="sounds/shoot3.wav"/>
	 
			</sound>
		        <attack-strenght value="55"/>
			<attack-var value="5"/>
			<attack-range value="15"/>
			<attack-type value="defender"/>
			<attack-start-time value="0.1"/>
			<attack-fields>
				<field value="land"/>
			</attack-fields>
			<projectile value="true">
				<particle value="true" path="particle_proj.xml"/>
				<sound enabled="true">
					<sound-file path="sounds/shels2.wav"/>
			 
				</sound>
			</projectile>
			<splash value="true">
				<radius value="0"/>
			 	<damage-all value="false"/>
				<particle value="true" path="particle_splash.xml"/>
			</splash>
		</skill>
 	
		
		<skill>
			<type value="die" />
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="30" />
			<anim-speed value="10" />
			<animation path="models/asparenium_dead.g3d" />
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/fall1.wav"/>
				<sound-file path="sounds/fall2.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

		<skill>												
			<type value="morph"/>											
			<name value="morph"/>											
			<ep-cost value="0"/>											
			<speed value="500"/>											
			<anim-speed value="200"/>											
			<animation path="models/asparenium.g3d"/>											
			<sound enabled="false"/> 											
		</skill>
		
		<skill>
			<type value="stop" />
			<name value="stop_destruct"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/asparenium_dead.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="0" />
				<target value="faction" include-self="true">
					<unit-type name="asparenium" />
				</target>
				<max-hp value="0" regeneration="-10000" />
				<particles value="false"/>
			</attack-boost>
		</skill>

	</skills>
	
	<!-- *** commands *** -->
	<commands>
	
		<command>				
			<type value="stop"/>			
			<name value="attack_off"/>			
			<image path="../../icons/attack_off.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
			<stop-skill value="stop_skill"/>			
		</command>	

		<command>				
			<type value="attack_stopped"/>			
			<name value="attack_on"/>			
			<image path="../../icons/attack_on.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
			<attack-skill value="attack_skill"/>			
                        <stop-skill value="stop_skill"/>						
		</command>

		<command>
			<type value="attack"/>
			<name value="attack"/>
			<image path="../../icons/attack.bmp"/>
			<unit-requirements/>
			<upgrade-requirements/>
			<move-skill value="move_skill"/>
			<attack-skill value="attack_skill"/>
		</command>
		
		<command>				
			<type value="attack_stopped"/>			
			<name value="self_destruction"/>			
			<image path="../../icons/destruct.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
                        <stop-skill value="stop_destruct"/>	
			<attack-skill value="attack_skill"/>							
		</command>

		<command>												
			<type value="morph"/>											
			<name value="upgrade_to_level_4_damage"/>											
			<image path="../ultimate_tower/images/archmage_tower.bmp"/>											
			<unit-requirements/>											
			<upgrade-requirements/>						
			<morph-skill value="morph"/>											
			<morph-unit name="ultimate_tower"/>											
			<discount value="0"/>											
		</command>

		<command>												
			<type value="morph"/>											
			<name value="back_to_tower_selection"/>											
			<image path="../level_3_towers/images/level_3_towers.bmp"/>											
			<unit-requirements/>											
			<upgrade-requirements/>					
			<morph-skill value="morph"/>											
			<morph-unit name= "level_3_towers"/>											
			<discount value="0"/>											
		</command>
		
	</commands>
</unit>