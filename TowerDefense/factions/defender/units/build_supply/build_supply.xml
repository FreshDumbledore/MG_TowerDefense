<?xml version="1.0" standalone="no" ?>
<unit>
	<!-- *** parameters *** -->
	<parameters>
		<size value="2" />
		<height value="1" />
		<max-hp value="8000" regeneration="0"/>
		<max-ep value="0" />
		<max-unit-count value="3" />
		<armor value="40" />
		<armor-type value="building"/>				
		<sight value="1" />
		<time value="20" />
		<multi-selection value="false" />
		<cellmap value="true">
			<row value="11"/>
			<row value="11"/>
		</cellmap>
		<levels/>
		<fields>
			<field value="land" />
		</fields>
		<properties>
		</properties>
		<light enabled="true" red="0.8" green="0.8" blue="0.5"/>
		<rotationAllowed value="false" />
		<unit-requirements/>
		<upgrade-requirements />
		<resource-requirements>
			<resource name="gold" amount="200" />
			<resource name="stone" amount="100" />
		</resource-requirements>
		<resources-stored>
		</resources-stored>
		<image path="images/hq.bmp" />
		<image-cancel path="../../icons/cancel.bmp"/>
		<meeting-point value="true" image-path="../../icons/meeting_point.bmp"/>
		<selection-sounds enabled="true">
			<sound path="sounds/click1.wav" />
			<sound path="sounds/click2.wav" />
		</selection-sounds>
		<command-sounds enabled="true">
			<sound path="sounds/click2.wav" />
			<sound path="sounds/click1.wav" />
		</command-sounds>
	</parameters>
	
	<!-- *** skills *** -->
	<skills>

		<skill>
			<type value="stop" />
			<name value="stop_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/pump1.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="12" />
				<target value="faction" include-self="false">
					<unit-type name="builder" />
				</target>
				<max-ep value="0" regeneration="100" value-percent-multipler="false" />
				<particles value="false" />
			</attack-boost>
		</skill>

		<skill>
			<type value="stop" />
			<name value="stop_destruct"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="100" />
			<animation path="models/pump1.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="1" />
				<target value="faction" include-self="true">
					<unit-type name="build_supply" />
				</target>
				<max-hp value="0" regeneration="-10000" value-percent-multipler="false" />
				<particles value="false" />
			</attack-boost>
		</skill>

		<skill>
			<type value="attack"/>
			<name value="attack_skill"/>		
			<ep-cost value="100"/>
			<speed value="350"/>
			<anim-speed value="350"/>
			<animation path="models/pump1.g3d"/>
			<sound enabled="false" />
		        <attack-strenght value="0"/>
			<attack-var value="0"/>
			<attack-range value="1"/>
			<attack-type value="defender"/>
			<attack-start-time value="0.1"/>
			<attack-fields>
				<field value="air"/>
			</attack-fields>
			<projectile value="false" />
			<splash value="false" />
		</skill>
		
		<skill>
			<type value="be_built" />
			<name value="be_built_skill"/>		
			<ep-cost value="0" />
			<speed value="300" />
			<anim-speed value="300" />
			<animation path="models/pump1_build.g3d" />
			<sound enabled="false" />
		</skill>	
		
		<skill>
			<type value="produce" />
			<name value="produce_skill"/>		
			<ep-cost value="0" />
			<speed value="60" />
			<anim-speed value="60" />
			<animation path="models/pump1_pump.g3d" />
			<sound enabled="false" />
			<attack-boost>
				<allow-multiple-boosts value="false" />
				<radius value="12" />
				<target value="faction" include-self="false">
					<unit-type name="builder" />
				</target>
				<max-ep value="0" regeneration="100" value-percent-multipler="false" />
				<particles value="false" />
			</attack-boost>
		</skill>	
		
		<skill>
			<type value="die" />
			<name value="die_skill"/>		
			<ep-cost value="0" />
			<speed value="30" />
			<anim-speed value="30" />
			<animation path="models/pump1_die1.g3d" />
			<particles value="true">
				<particle-file path="smoke_particles.xml"/>
			</particles>
			<sound enabled="true" start-time="0">
				<sound-file path="sounds/die.wav"/>
			</sound>			
			<fade value="false"/>
		</skill>

	</skills>
	
	<!-- *** commands *** -->
	<commands>
	
		<command>
			<type value="produce"/>
			<name value="produce_builder" />
			<image path="../builder/images/worker.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="builder"/>
		</command>

		<command>
			<type value="produce"/>
			<name value="produce_repairobot" />
			<image path="../repairobot/images/worker.bmp" />
			<unit-requirements />
			<upgrade-requirements />
			<produce-skill value="produce_skill"/>
			<produced-unit name="repairobot"/>
		</command>

		<command>				
			<type value="attack_stopped"/>			
			<name value="self_destruction"/>			
			<image path="images/destruct.bmp"/>			
			<unit-requirements/>			
			<upgrade-requirements/>			
			<attack-skill value="attack_skill"/>			
                        <stop-skill value="stop_destruct"/>						
		</command>

	</commands>
</unit>
