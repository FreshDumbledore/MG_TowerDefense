	<skills>
	
		<skill>
			<type value="stop"/>
			<name value="stop_skill"/>		
			<ep-cost value="0"/>
			<speed value="300"/>
			<anim-speed value="20"/>
			<animation path="models/ming_tower.g3d"/>
			<sound enabled="false"/>
